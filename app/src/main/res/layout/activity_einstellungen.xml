<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hedenius01.Einstellungen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="casual"
            android:textSize="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="PROBANDENNUMMER"
            android:textColor="#8B0000"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/probandennummer_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:inputType="number"
            android:maxLength="5"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="casual"
            android:gravity="center_horizontal|center_vertical"
            android:text="ORIGINALBILD in ms"
            android:textColor="#8B0000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/originalbild_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:inputType="number"
            android:maxLength="4" />

        <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:gravity="center_horizontal|center_vertical"
        android:text="GRAUBILD in ms"
        android:textColor="#8B0000"
        android:textSize="20dp"
        android:textStyle="bold" />


        <EditText
            android:id="@+id/graubild_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="20dp"
            android:maxLength="4"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="casual"
            android:gravity="center_horizontal|center_vertical"
            android:text="Fixationskreuz in ms"
            android:textColor="#8B0000"
            android:textSize="20dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/fixkreuz_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="20dp"
            android:maxLength="4"/>

        <Button
            android:id="@+id/start_btn"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_green_light"
            android:text="Start" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
